<?xml version='1.0' encoding='utf-8'?>
<widget id="org.supersapiens.atchallenge" version="0.2.1" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Attention Challenge</name>
    <description>Attention Challenge social meditation app</description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <preference name="Orientation" value="portrait" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <!-- These lines for adaptive icon -->
        <resource-file src="res/android/values/colors.xml" target="app/src/main/res/values/colors.xml" />
        <icon background="@color/background" density="mdpi" foreground="res/android/mipmap-mdpi/ic_launcher_foreground.png" />
        <icon background="@color/background" density="hdpi" foreground="res/android/mipmap-hdpi/ic_launcher_foreground.png" />
        <icon background="@color/background" density="xhdpi" foreground="res/android/mipmap-xhdpi/ic_launcher_foreground.png" />
        <icon background="@color/background" density="xxhdpi" foreground="res/android/mipmap-xxhdpi/ic_launcher_foreground.png" />
        <icon background="@color/background" density="xxxhdpi" foreground="res/android/mipmap-xxxhdpi/ic_launcher_foreground.png" />
        <!-- These lines for legacy icon [DO NOT WORK UNLESS ADAPTIVE ICON DEFINITIONS REMOVED] -->
        <icon density="mdpi" src="res/android/mipmap-mdpi/ic_launcher_round.png" />
        <icon density="hdpi" src="res/android/mipmap-hdpi/ic_launcher_round.png" />
        <icon density="xhdpi" src="res/android/mipmap-xhdpi/ic_launcher_round.png" />
        <icon density="xxhdpi" src="res/android/mipmap-xxhdpi/ic_launcher_round.png" />
        <icon density="xxxhdpi" src="res/android/mipmap-xxxhdpi/ic_launcher_round.png" />
    </platform>
    <allow-navigation href="about:*" />
    <config-file parent="/manifest" target="AndroidManifest.xml">
        <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
        <uses-permission android:name="android.permission.ACCESS_NOTIFICATION_POLICY" />
        <uses-sdk android:minSdkVersion="16" android:targetSdkVersion="25" />
    </config-file>
</widget>
